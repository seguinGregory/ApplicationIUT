<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#007497">

    <LinearLayout
        android:id="@+id/main_first_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:padding="25dp"
            android:id="@+id/buttonActualites"
            android:text="Actualites"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="#971354"
            android:drawableTop="@drawable/bouton_news" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:padding="25dp"
            android:text="Eco-Campus"
            android:textStyle="bold"
            android:id="@+id/buttonEcoCampus"
            android:textColor="@android:color/white"
            android:background="#971354"
            android:drawableTop="@drawable/bouton_eco"/> />
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:padding="25dp"
        android:text="Formations"
        android:textStyle="bold"
        android:id="@+id/buttonFormations"
        android:textColor="@android:color/white"
        android:background="#971354"
        android:drawableEnd="@drawable/bouton_formations" /> />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="false"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:text="Site IUT"
                android:id="@+id/buttonIUT"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:background="#971354"
                android:drawableLeft="@drawable/bouton_iut"
                android:minLines="1"
                android:maxLines="2" /> />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:text="Agenda"
                android:textStyle="bold"
                android:id="@+id/buttonAgenda"
                android:textColor="@android:color/white"
                android:background="#971354"
                android:drawableEnd="@drawable/bouton_agenda"/> />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="3"
                android:text="Twitter"
                android:textStyle="bold"
                android:id="@+id/buttonTwitter"
                android:textColor="@android:color/white"
                android:background="#971354"
                android:drawableLeft="@drawable/bouton_twitter"/> />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:text="Site UFC"
                android:textStyle="bold"
                android:id="@+id/buttonUniversite"
                android:textColor="@android:color/white"
                android:background="#971354"
                android:drawableStart="@drawable/bouton_universite"
                android:maxLines="2"
                android:minLines="1" /> />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="3"
                android:text="Facebook"
                android:textStyle="bold"
                android:id="@+id/buttonFacebook"
                android:textColor="@android:color/white"
                android:background="#971354"
                android:drawableTop="@drawable/bouton_facebook"
                android:drawablePadding="-10dp"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>